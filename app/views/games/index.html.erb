<div class="container">

  <div align="center">
    <%= image_tag 'xo' %>
  </div>


  <%= render 'new_game' %>


  <hr/>
  <div class="row">
    <div align="center">

      <% @games.each do |game| %>
        <% unless game['players'].first == current_user %>
          <div class="col-md-3">
            <div class="thumbnail" align="center">
              <strong><h3><%= game['players'].first %><h3></strong>

              <div class="caption">
                <% status = play_or_watch(game) %>
                <% if status == 'Play' %>
                  <%= link_to status, join_game_path(game['id']), class: 'btn btn-danger col-md-12' %>
                <% elsif status == 'Continue' %>
                  <%= link_to status, join_game_path(game['id']), class: 'btn btn-danger col-md-12' %>
                <% else %>
                  <%= link_to "Watch", '#', class: 'btn btn-danger col-md-12' %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
